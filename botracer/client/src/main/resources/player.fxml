<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.PlayerInfo">
   <left>
      <ImageView fx:id="image" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <CheckBox fx:id="ready" disable="true" focusTraversable="false" textOverrun="CLIP" BorderPane.alignment="CENTER" />
   </right>
   <center>
      <Label fx:id="name" text="Player 1" wrapText="true" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets left="8.0" right="8.0" />
         </BorderPane.margin></Label>
   </center>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
